[core]
  excludesfile = ~/.gitignore_global
  precomposeunicode = true
  quotepath = false
  pager = delta
[delta]
  side-by-side = true
  line-numbers-left-format = ""
  line-numbers-right-format = "â”‚ "
  navigate = true # use n and N to move between diff sections
  # syntax-theme = Monokai Extended
[diff]
  algorithm = histogram
[interactive]
  diffFilter = delta --color-only
[commit]
  gpgsign = true
[init]
  defaultBranch = main
[pull]
  rebase = true
[rebase]
  autosquash = true
  autostash = true
[merge]
  tool = nvimdiff
  conflictstyle = zdiff3
[log]
  date = iso
[branch]
  sort = -committerdate
[tag]
  sort = -taggerdate
[rerere]
  enabled = true

